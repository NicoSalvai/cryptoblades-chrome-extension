{
    "name":"Crypto Blades Tools",
    "description":"cryptobaldes-tools",
    "version":"0.1.0",
    "manifest_version":3,
    "background":{
        "service_worker":"background.js"
    },
    "action":{
        "default_popup":"popup.html",
        "default_icon":{
            "16":"./img/icon.png",
            "32":"./img/icon.png",
            "48":"./img/icon.png",
            "128":"./img/icon.png"
        }
    },
    "icons":{
        "16":"./img/icon.png",
        "32":"./img/icon.png",
        "48":"./img/icon.png",
        "128":"./img/icon.png"
    },
    "options_page":"./options.html",
    "permissions":["activeTab", "tabs", "storage", "scripting"],
    "host_permissions":["https://app.cryptoblades.io/#/*"]
}